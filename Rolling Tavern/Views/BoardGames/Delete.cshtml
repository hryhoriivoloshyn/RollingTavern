@model Rolling_Tavern.Models.BoardGame

@{
    ViewData["Title"] = "Delete";
}

<div class="page-content">
    <center>
        <h1>Чи справді ви бажаєте видалити цю гру?</h1>
        <h1>@Html.DisplayFor(model => model.GameName)</h1>
    </center>
    <hr />
    <div class="row justify-content-around">
        <div class="col-4" style="margin-left:250px; width:fit-content;">
            <div class="form-row profile-row">
                <div class="col-md-8">

                    <div class="form-group">
                        <h5>Жанр: <label> @Html.DisplayFor(model => model.Genre)</label></h5>
                    </div>
                    <div class="form-group">
                        <h5>Опис гри: </h5>
                        <label>@Html.DisplayFor(model => model.Description)</label>
                    </div>
                    <div class="form-group">
                        <h5>
                            Кількість гравців:
                            <label>@Html.DisplayFor(model => model.MinAmountOfPlayers) - @Html.DisplayFor(model => model.MaxAmountOfPlayers)</label>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4" style="margin-left:250px; width:fit-content;">
            <div class="form-row profile-row">
                <div class="col-md-8">
                    <div class="form-group">
                        <h5>Час гри:</h5>
                        <label>Від @Html.DisplayFor(model => model.MinGameTime) до @Html.DisplayFor(model => model.MaxGameTime) годин</label>
                    </div>
                    <div class="form-group">
                        <h5>Вікові обмеження: <label>@Html.DisplayFor(model => model.MinAgeOfPlayers)</label></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (User.IsInRole("admin"))
    {
        <form asp-action="Delete">
            <center>
                <input type="hidden" asp-for="GameId" />
                <input type="submit" value="Видалити" style="font-family: 'Bluu Next Cyrillic'; background: #B82406;font-size:20px;margin-top:30px" class="btn btn-primary" />
            </center>
        </form>
        <div>
            <center>
                <div style="margin-top: 10px">
                    <a asp-action="Details" asp-route-id="@Model.GameId" style="text-align: right; color: #333333; " class="text-muted">До зустрічі</a>
                </div>
            </center>
        </div>
        <div style="padding-bottom: 5px">
            <center>
                <div style="margin-top: 5px;">
                    <a asp-action="Index" style="text-align: right; color: #333333; " class="text-muted">До списку зустрічей</a>
                </div>
            </center>
        </div>
        @*<form asp-action="Delete">
            <div class="form-group text-center" style="margin-top: 10%; display: flex; align-items: center; justify-content: center;">
                <a asp-action="Index" class="text-muted">Повернутися до списку ігор</a>
                <a>------</a>
                <input type="hidden" asp-for="GameId" style="text-align:center" />
                <input type="submit" value="Видалити" class="nav-link text-white" style="text-align: center;position:relative; font-family: Bluu Next Cyrillic; background: #B82406; border-radius: 5px;
                            padding: 5px; padding-left: 10px; padding-right: 10px; width:10%;margin-bottom:10px" />
            </div>
        </form>*@
    }
    else
    {
        <label>Гарна спроба, але ви не адмін</label>
    }
</div>
