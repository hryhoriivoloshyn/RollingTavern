@model Rolling_Tavern.Models.Meeting

@{
    ViewData["Title"] = "Create";
}


<div>
    <h2><center>Створення зустрічі</center></h2>
    <hr />
    <div class="row justify-content-around">
        <div class="col-4" style="margin-left:250px">
            <div class="form-row profile-row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label>Назва зустрічі: </label>
                        <input class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="PhotoLink"></label>
                        <input type="file" name="meetingPicture" id="fileUpload" accept=".png,.jpg,.jpeg" />
                        <span asp-validation-for="PhotoLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Дата проведення зустрічі: </label>
                        <input class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label>Адреса зустрічі: </label>
                        <input class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label>Час проведення зустрічі: </label>
                        <input class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label>Опис зустрічі: </label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-4" style="right:100px">
            <div class="form-row profile-row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="PhotoLink"></label>
                        <input type="file" name="meetingPicture" id="fileUpload" accept=".png,.jpg,.jpeg" />
                        <span asp-validation-for="PhotoLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Назва гри: </label>
                        <select asp-for="GameId" class="form-control" asp-items="ViewBag.GameId"></select>
                    </div>
                    <div class="form-group">
                        <label>Вікові обмеження: </label>
                        <input class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label>Опис зустрічі: </label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <center>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </center>
   
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
