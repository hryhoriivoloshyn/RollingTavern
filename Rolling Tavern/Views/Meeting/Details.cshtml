@model Rolling_Tavern.Models.Meeting

@{
    ViewData["Title"] = "Details";
}

@* MeetingName = meeting.MeetingName,
                    DateOfMeeting = meeting.DateOfMeeting,
                    AddresOfMeeting = meeting.AddresOfMeeting,
                    Description = meeting.Description,
                    AdditionalRequirements = meeting.AdditionalRequirements,
                    PhotoLink = picturePath,
                    CreatorId = userId,
                    GameId = meeting.GameId,
                    MinimalAge = meeting.MinimalAge*@

<center>
    <h1>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingName)
        </dd>
    </h1>
</center>
<hr />
<div style="margin-left:5%">
    <div style="margin-left:auto; margin-right:auto; margin-top: 5px;">
        @if (Model.PhotoLink != null)
        {
            <img class="card-img-top" src="@Model.PhotoLink" style="max-height: 160px; max-width: 275px">
        }
        else
        {
            <img class="card-img-top" src="~/BoardGamesPicture/defaultBoardGame.jpg" style="max-height: 160px; max-width: 275px">
        }
    </div>
</div>
<div>
    @if (Model.CreatorId != null)
    {
        <h6 class="card-text">@Model.Creator.FirstName<img src="~/images/crown.png" style="height: 30px; margin-bottom: 1%; display: inline-block; width: 30px" /></h6>
    }
    else
    {
        <h6 class="card-text">Deleted User<img src="~/images/crown.png" style="height: 30px; margin-bottom: 1%; display: inline-block; width: 30px" /></h6>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MeetingId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
