@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div style="margin-left:auto; margin-right:auto">
    <form class="main-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div style="text-align:center">
            <h1>Реєстрація</h1>
            <div class="form-label">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label>Name</label>
                <input title="Name" class="form-control" />
                <span class="text-danger"></span>
                <label>Last Name</label>
                <input title="Last Name" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="button">Зареєструватися</button>
        </div>
    </form>
    
</div>
<style>
    body {
        background-color: #f6f0dc;
    }
    .form-label {
        width: 50%;
        margin-left: auto;
        margin-right: auto;
    }
    .main-form {
        background-color: #ffffff;
        margin-left: 30%;
        margin-right: 30%;
        box-shadow: 0 0 10px #555555;
        border-radius: 10px;
    }
    .button {
        padding-top: 2px;
        padding-bottom: 2px;
        padding-left: 20px;
        padding-right: 20px;
        margin-top: 3%;
        margin-bottom: 3%;
        background-color: #b82406;
        color: #ffffff;
        border: 0px;
        border-radius: 7px;
    }
</style>
