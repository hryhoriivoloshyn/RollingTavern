@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div style="margin-left: auto; margin-right: auto">
        <form class="main-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h1 style="text-align:center">Реєстрація</h1> 
            <div class="form-label">
                <label asp-for="Input.Email">Пошта</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Input.FirstName">Ім'я</label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Input.LastName">Прізвище</label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Input.DateOfBirth">Дата народження</label>
                <input asp-for="Input.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Input.Password">Пароль</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Input.ConfirmPassword">Підтвердити пароль</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div style="text-align:center" class="form-label">
                <button type="submit" class="button">Зареєструватися</button>
            </div>
        </form>
    </div>
<style>
    label{
        font-family:'Bluu Next Cyrillic';
    }
    h1{
        font-family:'Bluu Next Cyrillic';
        margin-top:10px
    }
    body {
        background-color: #f6f0dc;
    }
    .form-label {
        width: 50%;
        margin-left: auto;
        margin-right: auto;
    }
    .main-form {
        background-color: #ffffff;
        margin-left: 30%;
        margin-right: 30%;
        box-shadow: 0 0 10px #555555;
        border-radius: 10px;
    }
    .button {
        font-family: 'Bluu Next Cyrillic';
        position: relative;
        top: 18px;
        padding-top: 2px;
        padding-bottom: 2px;
        padding-left: 20px;
        padding-right: 20px;
        margin-top: 3%;
        margin-bottom: 3%;
        background-color: #b82406;
        color: #ffffff;
        border: 0px;
        border-radius: 7px;
    }
</style>
