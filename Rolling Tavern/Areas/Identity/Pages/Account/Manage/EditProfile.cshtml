@page
@model EditProfileModel
@{
    ViewData["Title"] = "Зміна даних";
    ViewData["ActivePage"] = ManageNavPages.EditProfile;
}
<h4 style="font-family:'Bluu Next Cyrillic'">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row" style>
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row profile-row">
                <div class="col-md-4 relative">
                    <div class="avatar">
                        <div class="avatar-bg center">Фотографія</div>
                    </div><input type="file" class="form-control" name="avatar-file" />
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label>Ім`я</label><input type="email" class="form-control" autocomplete="off" required name="email" style="width: 300px;" />
                    </div>
                    <div class="form-row" style="margin: 0px;">
                        <div class="form-group">
                            <label asp-for="UserInfo.LastName">Прізвище</label>
                            <input asp-for="UserInfo.LastName" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-row" style="margin: 0px;">
                        <div class="form-group">
                            <label style="margin: 0px 0px 8px;">Стать</label>
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false" type="button">Чоловіча</button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Чоловіча</a>
                                    <a class="dropdown-item" href="#">Жіноча</a>
                                    <a class="dropdown-item" href="#">Невизначена</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin: 0px;">
                <label asp-for="UserInfo.PhoneNumber" style="font-family:'Bluu Next Cyrillic'">Номер телефону</label>
            </div>
            <div class="row" style="margin: 0px;">
                <input asp-for="UserInfo.PhoneNumber" style="font-family:'Bluu Next Cyrillic'" class="form-control" disabled />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary" style="margin: 10px 300px;font-family:'Bluu Next Cyrillic'">Зберегти</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}