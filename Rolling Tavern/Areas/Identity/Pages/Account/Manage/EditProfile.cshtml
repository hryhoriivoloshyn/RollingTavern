@page
@model EditProfileModel
@{
    ViewData["Title"] = "Зміна даних";
    ViewData["ActivePage"] = ManageNavPages.EditProfile;
}
<h4 style="font-family:'Bluu Next Cyrillic';margin-left:250px;">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row" style="font-family:'Bluu Next Cyrillic'">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row profile-row">
                <div class="col-md-4 relative">
                    <div class="avatar">
                        <div class="avatar-bg center">Фотографія</div>
                    </div>
                    <input type="file" class="form-control" name="avatar-file" />
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="UserInfo.LastName">Ім`я</label>
                        <input asp-for="UserInfo.FirstName" class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserInfo.LastName">Прізвище</label>
                        <input asp-for="UserInfo.LastName" class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserInfo.PhoneNumber">Номер телефону</label>
                        <input asp-for="UserInfo.PhoneNumber" class="form-control" enabled />
                    </div>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary align-middle" style="margin: 10px 300px; font-family: 'Bluu Next Cyrillic'; background: #B82406;">Зберегти</button>
            <div class="row" style="height:100px"></div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}