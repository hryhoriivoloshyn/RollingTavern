@page
@model EditProfileModel
@{
    ViewData["Title"] = "Зміна даних";
    ViewData["ActivePage"] = ManageNavPages.EditProfile;
}
<h4 style="font-family:'Bluu Next Cyrillic';margin-left:250px;">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row" style="font-family:'Bluu Next Cyrillic'">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row profile-row">
                <div class="col-md-8" style="position:center">
                    <div class="form-group">
                        <label asp-for="UserInfo.LastName">Ім`я</label>
                        <input asp-for="UserInfo.FirstName" class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserInfo.LastName">Прізвище</label>
                        <input asp-for="UserInfo.LastName" class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserInfo.PhoneNumber">Номер телефону</label>
                        <input asp-for="UserInfo.PhoneNumber" class="form-control" enabled />
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="UserInfo.ProfilePicture" class="text-danger"></span>
                        <input type="file" name="ProfilePicture" id="fileUpload" accept=".png,.jpg,.jpeg" onchange="readURL(this);" />
                        <img id="blah" src="#" alt="Оберіть фото" style="margin-top:5px"/>
                    </div>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary align-middle" style="margin: 10px 300px; font-family: 'Bluu Next Cyrillic'; background: #B82406;font-size:20px;">Зберегти</button>
        </form>
    </div>
    <script>
        function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            var h = $('#blah').height();
            var w = $('#blah').width();
            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    .width(w*4)
                    .height(h*6);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
    </script>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}