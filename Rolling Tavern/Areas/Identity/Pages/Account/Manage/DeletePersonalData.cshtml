@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<style>
    section.profileLeft {
        color: black;
        border: 1px solid black;
        height: fit-content;
        width: 90%;
        border-radius: 10px;
        padding-bottom: 10px;
    }

    button {
        background-color: Transparent;
        border: 1px solid black;
    }
</style>

<section class="profileLeft" style="background-color:white; min-height">
    <h4><center style="font-family: 'Bluu Next Cyrillic';"> Видалення акаунту </center></h4>
    <div>
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="text-danger" ></div>
            @if (Model.RequirePassword)
            {
                <div class="form-group" style=" margin-left: 50px; margin-top: 5px;">
                    <label asp-for="Input.Password" style="font-family: 'Bluu Next Cyrillic';">Пароль</label>
                    <input asp-for="Input.Password" class="form-control" style="width:60%;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <input type="checkbox" id="agreed" name="agreed">
                    <label for="scales" style="font-family: 'Bluu Next Cyrillic';">Підтвердити видалення</label>

                </div>
            }
            <button class="btn btn-primary align-middle" type="submit" style="margin: auto; margin-bottom: 10px; display: flex; font-family: 'Bluu Next Cyrillic'; background: #B82406; font-size: 20px;">Видалити акаунт та персональні дані!</button>

        </form>
          </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}