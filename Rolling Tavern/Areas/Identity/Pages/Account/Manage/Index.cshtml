@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserInfo.FirstName"></label>
                <input asp-for="UserInfo.FirstName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.LastName"></label>
                <input asp-for="UserInfo.LastName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Email"></label>
                <input asp-for="UserInfo.Email" class="form-control" disabled />
            </div>
            <div class="form-label">
                <label asp-for="UserInfo.DateOfBirth"></label>
                <input asp-for="UserInfo.DateOfBirth" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.PhoneNumber"></label>
                <input asp-for="UserInfo.PhoneNumber" class="form-control" disabled />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div>
        <table border="3px" align="center" cellpadding="5px">
            <tr>
                <th>

                </th>
                <th>
                    Фото
                </th>
                <th>
                    Назва
                </th>
                <th>
                    Адреса
                </th>
                <th>
                    Дата
                </th>
                <th>
                    Учасники
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model.CreatedMeetings)
            {
                <tr>
                    <td></td>
                    <td>@item.PhotoLink</td>
                    <td>@item.MeetingName</td>
                    <td>@item.AddresOfMeeting</td>
                    <td>@item.DateOfMeeting</td>
                    <td></td>
                    <td><button class="btn btn-primary">Детальніше</button></td>
                </tr>
            }
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}