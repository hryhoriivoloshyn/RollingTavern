@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    section.profileLeft {
        color: black;
        border: 1px solid black;
        height: 100%;
        width: 90%;
        border-radius: 10px;
    }

    button {
        background-color: Transparent;
        border: 1px solid black;
    }
</style>
<section class="profileLeft" style="background-color:white">
    <h4><center> Зустрічі </center></h4>

    <div>
        <ul class="nav nav-pills flex-column">
            @foreach (var item in Model.CreatedMeetings)
            {
            <li>
                @if (Model.UserInfo.Id == item.CreatorId)
                {
                <img src="~/images/crown.png" style="height: 30px; margin-left: 3%; margin-bottom: 1%; display: inline-block; width: 30px ">
                }
                else
                {
                <img src="~/images/DefaultUser.png" style="height: 30px; margin-left: 3%; margin-bottom: 1%; display: inline-block; width: 30px ">
                }
                <img src="@item.PhotoLink" style="height: 30px; margin-left: 1%; margin-bottom: 1%; display: inline-block; width: 30px ">
                <h5 style="display: inline-block; margin-left: 1%">@item.MeetingName</h5>
                <h5 style="display: inline-block; margin-left: 1%">@item.AddresOfMeeting</h5>
                <h5 style="display: inline-block; margin-left: 1%">@item.DateOfMeeting</h5>
                <img src="~/images/DefaultUser.png" style=" margin-bottom: 1%; height: 30px; display: inline-block; margin-left: 1%; width: 30px">
                <h5 style="display: inline-block">@item.Requests.Count(i => i.StateId==2) / @item.Game.MaxAmountOfPlayers</h5>
