@using Rolling_Tavern.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<style>
    section.profile {
        color: black;
        border: 1px solid black;
        height: 100%;
        margin-left: 15%;
        border-radius: 10px;

    }
    .round {
        height: 50%;
        border-radius: 100px; /* Радиус скругления */
        border: 3px solid black; /* Параметры рамки */
        box-shadow: 0 0 7px #666; /* Параметры тени */
    }

    hr{
        margin: 5px 0px 5px 0px;
    }
</style>

<section class="profile" style="background-color:white">

    <p>
        <center> <img src="@Model.UserInfo.ProfilePicture" alt="" class="round" style="height: 100px; width: 100px"></center>
    </p>
    <p><center> @Model.UserInfo.FirstName<br />@Model.UserInfo.LastName</center></p>
    <hr />


    <ul class="nav nav-pills flex-column">
        <li class="nav-item">
            <center> 
                <a style="margin: auto;color: black" id="meeting-history" asp-page="/Account/Manage/Index">Історія зустрічей</a>
            </center>
            <hr />
        </li>
        <li class="nav-item">
            <img src="~/images/settings_icon.png" alt="" class="round" style="height: 30px; margin-left: 10%; width: 30px">
            <a style="margin-left: 5%; color: black" id="profile" asp-page="./EditProfile">Редагувати профіль</a>
            <hr />
        </li>
        <li class="nav-item">
            <center>
                @*<img src="~/images/settings_icon.png" alt="" class="round" style="height: 30px; margin-left: 10%; width: 30px">*@
                <a style="margin-bottom: 10%; color: black" id="email" asp-page="./Logout">Вихід</a>
            </center>
            <hr/>
        </li>

    </ul>
    <script>
        function goToProfile(input) {
            window.location.replace(input);
        };
    </script>
